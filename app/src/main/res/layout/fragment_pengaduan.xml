<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.user.laporanpengaduan.mFragments.PengaduanFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama : "
                android:textSize="18sp"
                android:layout_marginBottom="10dp"
                android:id="@+id/Nama"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/et_nama"
                android:hint="Masukkan nama"
                android:layout_marginBottom="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kategori : "
                android:textSize="18sp"
                android:id="@+id/kategori"
                android:layout_marginBottom="10dp"/>

            <Spinner
                android:id="@+id/s_kategori"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawSelectorOnTop="true"
                android:entries="@array/spinnerItems"
                android:layout_below="@+id/Nama"
                android:layout_marginBottom="20dp">
            </Spinner>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Deskripsi        :   "
                android:textSize="18sp"
                android:id="@+id/deskripsi"
                android:layout_marginBottom="10dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/et_deskripsi"
                android:layout_marginBottom="20dp"
                android:inputType="textMultiLine"
                android:gravity="left|top"
                android:hint="Masukkan desripsi kejadian"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lokasi : "
                android:textSize="18sp"
                android:id="@+id/lokasi"
                android:layout_marginBottom="10dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/et_lokasi"
                android:layout_marginBottom="20dp"
                android:hint="Masukkan lokasi kejadian"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Upload Foto  :   "
                android:textSize="18sp"
                android:id="@+id/upload"
                android:layout_marginBottom="10dp"/>

            <ImageView
                android:id="@+id/iv_uploadFoto"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:text="Upload Foto"
                android:layout_marginBottom="20dp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btn_browseFoto"
                android:text="Cari Foto"
                android:background="@android:color/holo_blue_light"
                android:textColor="@android:color/white"
                android:layout_marginBottom="10dp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btn_Kirim"
                android:text="Kirim"
                android:background="@android:color/holo_blue_dark"
                android:textColor="@android:color/white"
                android:layout_marginBottom="20dp"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
